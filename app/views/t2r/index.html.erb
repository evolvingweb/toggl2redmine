<h2>Toggle 2 Redmine</h2>

<form id="config-form" class="t2r-form">
  <div class="form-item form-item-hidden" hidden="hidden">
    <input id="toggl-api-key" type="hidden" maxlength="64" required="required" value="<%= @toggl_api_key %>" readonly="readonly" />
  </div>
  <div class="form-item">
    <label for="date">Date</label>
    <input id="date" type="date" required="required" />
  </div>
  <div class="form-actions">
    <button type="submit" id="btn-preview">Preview</button>
  </div>
</form>

<div id="redmine-report-container">
  <h2>Entries from Redmine</h2>
  <table id="redmine-report" class="list odd-even t2r-report">
    <thead>
    <tr>
      <th class="id">Issue #</th>
      <th class="project">Project</th>
      <th class="subject">Subject</th>
      <th class="comments">Comments</th>
      <th class="activity">Activity</th>
      <th class="hours">Hours</th>
    </tr>
    </thead>
    <tbody>
    </tbody>
  </table>
</div>

<form id="publish-form">
  <h2>Entries from Toggl</h2>
  <table id="toggl-report" class="list odd-even t2r-table">
    <thead>
      <tr>
        <th class="checkbox">Import?</th>
        <th class="id">Issue #</th>
        <th class="project">Project</th>
        <th class="subject">Subject</th>
        <th class="comments">Comments</th>
        <th class="activity">Activity</th>
        <th class="hours">Hours</th>
      </tr>
    </thead>
    <tbody>
    </tbody>
  </table>
  <div class="form-actions">
    <button id="btn-publish" type="submit">Post to Redmine</button>
  </div>
</form>

<% content_for :header_tags do %>
  <%= stylesheet_link_tag 't2r', :plugin => 'toggl2redmine' %>
  <%= javascript_include_tag "t2r.js", :plugin => 'toggl2redmine' %>
<% end %>
